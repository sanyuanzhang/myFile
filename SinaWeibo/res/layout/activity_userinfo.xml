<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView_userInfo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_user" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView_userInfo"
        android:layout_below="@+id/imageView_userInfo"
        android:layout_marginTop="15dp"
        android:text="基本信息"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView_userInfo_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_userInfo_name"
        android:layout_below="@+id/textView_userInfo_name"
        android:layout_marginTop="10dp"
        android:text="location" />

    <TextView
        android:id="@+id/textView_userInfo_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignLeft="@+id/textView_userInfo_location"
        android:text="关注：" />

    <TextView
        android:id="@+id/textView_userInfo_fans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_userInfo_attention"
        android:layout_alignBottom="@+id/textView_userInfo_attention"
        android:layout_toRightOf="@+id/textView_userInfo_attention"
        android:layout_marginLeft="5dp"
        android:text="粉丝：" />

    <TextView
        android:id="@+id/textView_userInfo_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_userInfo_fans"
        android:layout_alignBottom="@+id/textView_userInfo_fans"
        android:layout_toRightOf="@+id/textView_userInfo_fans"
        android:layout_marginLeft="5dp"
        android:text="收藏：" />

    <TextView
        android:id="@+id/textView_userInfo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="10dp"
        android:text="个人描述" />

    <TextView
        android:id="@+id/textView_userInfo_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_userInfo_description"
        android:layout_below="@+id/textView_userInfo_description"
        android:layout_marginTop="10dp"
        android:text="博客地址" />

    <TextView
        android:id="@+id/textView_userInfo_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_userInfo_location"
        android:layout_alignBottom="@+id/textView_userInfo_location"
        android:layout_toRightOf="@+id/textView_userInfo_location"
        android:layout_marginLeft="10dp"
        android:text="性别" />

    <TextView
        android:id="@+id/textView_userInfo_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_userInfo_url"
        android:layout_below="@+id/textView_userInfo_url"
        android:layout_marginTop="10dp"
        android:text="创建时间" />

    <TextView
        android:id="@+id/textView_userInfo_verified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_userInfo_create"
        android:layout_below="@+id/textView_userInfo_create"
        android:layout_marginTop="10dp"
        android:text="是否认证用户" />

    <TextView
        android:id="@+id/textView_userInfo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_userInfo"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/imageView_userInfo"
        android:text="screen_name"
        android:textColor="#44A2D9"
        android:textSize="19sp" />

</RelativeLayout>
